<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="CustomStyle" parent="Theme.AppCompat">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>

    </style>

    <style name="NoActionBarStyle" parent="Theme.AppCompat.Light.NoActionBar"/>

    <style name="RobotoTextViewStyle"
        parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-bold</item>
    </style>
    
    <style name="FloatingLabelTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/icons</item>
    </style>

    <style name="UnderlineSpinner" parent="Base.Widget.AppCompat.Spinner.Underlined">
        <item name="android:spinnerStyle">?android:attr/spinnerItemStyle</item>

    </style>

</resources>
